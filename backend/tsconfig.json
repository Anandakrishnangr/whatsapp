{
  "compilerOptions": {
    "target": "ES2015",                   // For private identifiers
    "module": "CommonJS",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "esModuleInterop": true,              // Fix default import issues
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,                 // (Optional) Skips checking declaration files
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
